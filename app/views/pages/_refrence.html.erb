<%= form_for @refrence,:url=>referral_data_save_path,:method=>:get,:remote=>true do |f| %>
<div class="clearfix">
   <%= f.label :activity_description_place %>
  <div class="input">
    <%= f.text_area :activity_description_place,:rows=>5,:cols=>40%>
  </div>
</div>

<div class="clearfix">
   <%= f.label :expirience_from_activity%>
  <div class="input">
    <%= f.text_area :expirience_from_activity,:rows=>5,:cols=>40 %>
  </div>
</div>
<div class="clearfix"  >
 <%= f.label :skill_1%>
<%= f.select 'skill_1', options_for_select([["Programming" , "Programming" ],["Communication" , "Communication" ],["Art" , "Art" ]])%>
</div>

<div class="clearfix"  style="margin-left: 290px; margin-top: -67px;">
   <%= f.label :skill_1_description%>
  <div class="input">
    <%= f.text_field :skill_1_description%>
  </div>
</div>

<div class="clearfix"  >
 <%= f.label :skill_2%>
