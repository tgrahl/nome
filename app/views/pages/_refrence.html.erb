   <%= f.label :skill_3_description%>
  <div class="input">
    <%= f.text_field :skill_3_description%>
  </div>
</div>
<%= hidden_field_tag "education_id", @education.id %>
<div class="form-actions">
  <button class="btn primary" type="submit">Save</button> 
</div>
